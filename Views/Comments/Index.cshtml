@model IEnumerable<BlogProject.Models.Comment>

@{
    ViewData["Title"] = "Index";
}

<!-- Main Content-->
<section class="blog-list px-3 py-5 p-md-5">
    <div class="container single-col-max-width">
        <div class="table-responsive">
            @if (ViewBag.Index == "Regular")
            {
                <h1>Index</h1>

                <p>
                    <a asp-action="Create">Create New</a>
                </p>

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Body)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BlogUser)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Body)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BlogUser.FullName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            }
            else if (ViewBag.Index == "Moderated")
            {
                <h1>Moderated Index</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Body)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModeratedBody)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Moderated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModerationType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Moderator)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Body)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModeratedBody)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Moderated)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModerationType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Moderator.FullName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Edit" asp-route-id="@item.Id">Restore</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            }
            else if (ViewBag.Index == "Deleted")
            {
                <h1>Deleted Index</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.BlogUser)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Body)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Deleted)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Moderator)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BlogUser.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Body)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Deleted)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Moderator.FullName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Restore" asp-route-id="@item.Id">Restore</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            }
        </div>
    </div>
</section>