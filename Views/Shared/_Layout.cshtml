@using BlogProject.Enums

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta property="og:title" content="Ricky's Blog" />
    <meta property="og:url" content="https://blog.riosr.com" />
    <meta property="og:image" content="https://riosr.com/assets/images/og-blog.png" />
    <meta name="description" content="Ricky's Blog'" />
    <meta name="author" content="Ricky Rios" />

    <title>@ViewData["Title"] - Ricky's Blog</title>

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/assets/img/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/img/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/img/favicons/favicon-16x16.png">
    <link rel="manifest" href="~/assets/img/favicons/site.webmanifest">
    <link rel="shortcut icon" href="~/assets/img/favicons/favicon.ico">
    <link rel="icon" type="image/x-icon" href="~/assets/img/favicons/favicon.ico" />

    <!-- Font Awesome icons (free version) -->
    @*<script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>*@

    <!-- FontAwesome JS -->
    <script defer src="assets/fontawesome/js/all.min.js"></script>

    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />

    <!-- Summernote CSS -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

    <!-- Theme CSS -->
    <link id="theme-style" rel="stylesheet" href="assets/css/theme-1.css">

    <!-- Core theme CSS (includes Bootstrap) -->
    @*<link href="~/css/styles.css" rel="stylesheet" />*@
    <!-- Custom CSS -->
    @*<link href="~/css/custom.css" rel="stylesheet" />*@
</head>
<body>
    
    <!-- Page Header -->
    <header class="masthead" style="background-image: url(@ViewData["HeaderImage"]); height: 835px;">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>@ViewData["MainText"]</h1>
                        <span class="subheading">@ViewData["SubText"]</span>

                        <form asp-controller="Posts" asp-action="SearchIndex">
                            <div class="input-group mt-5">
                                <input type="text" name="SearchTerm" class="form-control" placeholder="Search Term" />
                                <button type="submit" class="btn btn-warning">Search</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Sidebar -->
    <header class="header text-center">	    
	    <h1 class="blog-name pt-lg-4 mb-0"><a class="no-text-decoration" asp-action="Index">Ricky's Blog</a></h1>
        
        <!-- Navigation -->
	    <nav class="navbar navbar-expand-lg navbar-dark" >
           
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div id="navigation" class="collapse navbar-collapse flex-column" >
                <!-- profile section -->
				<div class="profile-section pt-3 pt-lg-0">
				    <img class="profile-image mb-3 rounded-circle mx-auto" src="~/assets/images/profile-pic.jpg" alt="image" >			
					
					<!-- bio -->
                    <div class="bio mb-3">Hi, my name is Ricky and I'm a full-stack web developer. Welcome to my blog!</div>

                    <!-- social list -->
                    <ul class="social-list list-inline py-2 mx-auto">
                        <li class="list-inline-item"><a href="https://www.linkedin.com/in/rickyriosp/" target="_blank"><i class="fab fa-linkedin-in fa-fw"></i></a></li>
                        <li class="list-inline-item"><a href="https://github.com/rickyriosp" target="_blank"><i class="fab fa-github-alt fa-fw"></i></a></li>
                        <li class="list-inline-item"><a href="https://twitter.com/rickyriosp" target="_blank"><i class="fab fa-twitter fa-fw"></i></a></li>
                        <!-- <li class="list-inline-item"><a href="#" target="_blank"><i class="fab fa-stack-overflow fa-fw"></i></a></li> -->
                        <!-- <li class="list-inline-item"><a href="#" target="_blank"><i class="fab fa-codepen fa-fw"></i></a></li> -->
                    </ul>
                    <!-- end social list -->
			        <hr> 
				</div>
                <!-- end profile section -->
				
                <!-- navigation links -->
				<ul class="navbar-nav flex-column text-start">
					<li class="nav-item">
					    <a class="nav-link active" asp-controller="Home" asp-action="Index"><i class="fas fa-home fa-fw me-2"></i>Home <span class="sr-only">(current)</span></a>
					</li>
					<li class="nav-item">
					    <a class="nav-link" href="blog-post.html"><i class="fas fa-bookmark fa-fw me-2"></i>Blog Post</a>
					</li>
					<li class="nav-item">
					    <a class="nav-link" href="https://riosr.com" target="_blank"><i class="fas fa-user fa-fw me-2"></i>About Me</a>
					</li>
                    @if (User.IsInRole(BlogRole.Administrator.ToString()) || User.IsInRole(BlogRole.GuestAuthor.ToString()))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Blogs" asp-action="Create"><i class="fas fa-blog fa-fw me-2"></i>Create Blog</a></li>
                    }
                    <partial name="_LoginPartial" />
				</ul>
                <!-- end navigation links -->
				
				<div class="my-2 my-md-3">
				    <a class="btn btn-primary" asp-controller="Home" asp-action="Contact">Get in Touch</a>
				</div>
			</div>
		</nav>
    </header>

    <!-- Main Content-->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer-->
    <footer class="footer text-center py-2 theme-bg-dark">
        <!--/* This template is free as long as you keep the footer attribution link. If you'd like to use the template without the attribution link, 
        you can buy the commercial license via our website: themes.3rdwavemedia.com Thank you for your support. :) */-->
        <small class="copyright">
            Designed with 
            <i class="fas fa-heart" style="color: #fb866a;"></i> by 
            <a href="https://themes.3rdwavemedia.com" target="_blank">Xiaoying Riley</a> 
            for developers | Modified by <a href="https://riosr.com" target="_blank">Ricky Rios</a>.
        </small>
    </footer>

    <!-- Javascript -->
    <script src="~/assets/plugins/popper.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

    <!-- Summernote JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <!-- Sweet Alert 2 JS -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Custom JS -->
    <script src="~/js/scripts.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
